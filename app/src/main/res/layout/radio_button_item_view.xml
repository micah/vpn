<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_config_item_square"
        android:paddingHorizontal="@dimen/default_padding"
        android:clickable="true"
        android:focusable="true">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_button"
            style="@style/radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            style="@style/radio_button_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:importantForAccessibility="no"
            android:paddingTop="@dimen/default_padding"
            app:layout_constraintEnd_toStartOf="@+id/guideline_vertical"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/obfs4_built_in" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_subtitle"
            style="@style/radio_button_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:importantForAccessibility="no"
            android:paddingBottom="@dimen/default_padding"
            app:layout_constraintEnd_toStartOf="@+id/iv_edit_icon"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="@string/obfs4_description" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintGuide_end="36dp"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/view2"
            android:layout_width="2dp"
            android:layout_height="28dp"
            android:layout_marginEnd="12dp"
            android:background="@color/outline"
            app:layout_constraintTop_toTopOf="@id/iv_edit_icon"
            app:layout_constraintBottom_toBottomOf="@id/iv_edit_icon"
            app:layout_constraintEnd_toStartOf="@id/iv_edit_icon" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_edit_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pencil"
            android:layout_marginStart="@dimen/default_padding"
            android:layout_marginEnd="@dimen/default_padding"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingEnd="4dp"
            app:layout_constraintStart_toEndOf="@+id/guideline_vertical" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>