<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="an extremely long line with so much content I can't believe it"
            android:textColor="@color/on_surface"
            android:ellipsize="end"
            app:chipBackgroundColor="@android:color/transparent"
            app:chipSurfaceColor="@android:color/transparent"
            app:chipStrokeWidth="0dp"
            app:closeIcon="@drawable/ic_x_circle"
            app:closeIconEnabled="true"
            app:closeIconTint="@color/on_surface_variant"
            app:chipStartPadding="@dimen/default_padding"
            app:chipEndPadding="@dimen/default_padding"
            app:chipMinTouchTargetSize="2dp"
            />
</layout>
