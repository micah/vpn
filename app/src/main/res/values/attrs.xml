<resources>
    <attr name="text" format="string" />
    <attr name="secondaryText" format="string" />
    <attr name="drawable" format="color|reference" />
    <attr name="hideDrawable" format="boolean" />
    <attr name="hideSwitch" format="boolean" />
    <attr name="external" format="boolean" />
    <attr name="checked" format="boolean" />

    <declare-styleable name="AppItemView">
        <attr name="text"/>
        <attr name="drawable"/>
    </declare-styleable>

    <declare-styleable name="IconTextEntryView">
        <attr name="text"/>
        <attr name="secondaryText"/>
        <attr name="drawable"/>
        <attr name="hideDrawable" />
        <attr name="hideSwitch" />
        <attr name="checked" />
    </declare-styleable>

    <declare-styleable name="BridgeRequestEntryView">
        <attr name="text"/>
        <attr name="secondaryText"/>
        <attr name="drawable"/>
        <attr name="external"/>
    </declare-styleable>
</resources>