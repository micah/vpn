<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TorVPN" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- set material design 3 default color attributes our custom color scheme -->
        <item name="colorPrimary">@color/surface</item>
        <item name="colorOnPrimary">@color/on_surface</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceContainer">@color/surface_container</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        <item name="colorSurfaceContainerHigh">@color/surface_container_high</item>
        <item name="colorSurfaceContainerHighest">@color/surface_container_highest</item>
        <item name="colorSurfaceContainerLow">@color/surface_container_low</item>
        <item name="colorSurfaceContainerLowest">@color/surface_container_lowest</item>

        <!-- set material design 3 default text attributes our custom text styles -->
        <item name="textAppearanceTitleLarge">@style/title_large</item>
        <item name="textAppearanceTitleMedium">@style/title_medium</item>
        <item name="textAppearanceTitleSmall">@style/title_small</item>
        <item name="textAppearanceBodyLarge">@style/body_large</item>
        <item name="textAppearanceBodyMedium">@style/body_medium</item>
        <item name="textAppearanceBodySmall">@style/body_small</item>
        <item name="textAppearanceHeadlineLarge">@style/headline_small</item>
        <item name="textAppearanceHeadlineMedium">@style/headline_medium</item>
        <item name="textAppearanceHeadlineSmall">@style/headline_small</item>
        <item name="textAppearanceLabelLarge">@style/label_large</item>
        <item name="textAppearanceLabelMedium">@style/label_medium</item>
        <item name="textAppearanceLabelSmall">@style/label_small</item>
        <item name="textAppearanceButton">@style/label_large</item>

        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor">@color/surface</item>

        <item name="actionMenuTextColor">@color/primary</item>
        <item name="android:actionMenuTextColor">@color/primary</item>

        <!-- Customize your theme here. -->
        <item name="android:homeAsUpIndicator">
            @drawable/ic_arrow_left
        </item>

        <item name="android:colorBackground">@color/surface</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>

        <!--//We have explicitly defined these on Toolbars and BottomNav but adding here for consistency across the app in case future updates adds more toolbars-->
        <item name="toolbarStyle">@style/toolbar_theme</item>
        <item name="bottomNavigationStyle">@style/Widget.Material3.BottomNavigationView</item>

    </style>

    <style name="Theme.TorVPN.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

    <style name="Theme.TorVPN.PopupOverlay" parent="ThemeOverlay.Material3.Light" />


</resources>